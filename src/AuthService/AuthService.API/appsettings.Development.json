{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=TaskManagement_Auth;Username=postgres;Password=your_password",
    "PostgresAdmin": "Host=localhost;Port=5432;Database=postgres;Username=postgres;Password=your_password"
  },
  "Postgres": {
    "Databases": [
      "TaskManagement_Auth",
      "TaskManagement_Tokens"
    ]
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-is-at-least-32-characters-long",
    "Issuer": "TaskManagement.AuthService",
    "Audience": "TaskManagement.Client",
    "ExpirationHours": 24
  }
}
